<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.numericalpass"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <permission android:name="com.example.numericalpass.READ_DATABASE"
        android:protectionLevel="normal"/>
    <permission android:name="com.example.numericalpass.WRITE_DATABASE"
        android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".UsernameActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activitytest"
            android:label="@string/app_name"
            android:parentActivityName=".UsernameActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.numericalpass.UsernameActivity" />
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:parentActivityName=".UsernameActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.numericalpass.UsernameActivity" />
        </activity>

        <activity
            android:name=".RegistrationActivity"
            android:label="@string/app_name"
            android:parentActivityName=".Activitytest">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.numericalpass.Activitytest" />
        </activity>

        <activity
            android:name=".ConfirmationActivity"
            android:label="@string/app_name"
            android:parentActivityName=".Activitytest">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.numericalpass.Activitytest" />
        </activity>

        <activity
            android:name=".WelcomeActivity"
            android:label="@string/title_activity_welcome"/>

        <provider
            android:authorities="com.example.numericalpass.NumPin"
            android:name=".CustomContentProvider"
            android:exported="true"
            android:readPermission="com.example.numericalpass.READ_DATABASE"
            android:writePermission="com.example.numericalpass.WRITE_DATABASE"
            />

    </application>
</manifest>
